<%- include("partials/header") -%>
<h1> Compose </h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="textTitleField"> Title </label>
        <input type="text" name="textTitle" id = "textTitleField" class="form-control">
    </div>
    <div class="form-group">
        <label for="textBodyField"> Post </label>
        <textarea rows="5" cols="60" name="textBody" id="textBodyField" class="form-control"></textarea>
    </div>
    <button type="submit" name="submit" class="btn btn-primary"> Publish </button>
</form>
<%- include("partials/footer") -%>